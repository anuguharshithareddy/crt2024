import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner k=new Scanner(System.in);
        int n;
        n=k.nextInt();
        int r=0;
        int t=0;
        for(int i=0;i<n;i++)
        {
            r=2+(r*10);
            t=t+r;
        }
        System.out.printf("%d",t);
    }
}
